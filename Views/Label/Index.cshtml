@model IEnumerable<entityFrameworkProyect.Models.Label>
@{
    ViewData["Title"] = "Lista de de etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de etiquetas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary form-control">Crear etiqueta</a>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Fecha de creación</th>
                <th></th>
            </tr>
            @foreach (var label in Model)
            {
                <tr>
                    <td>@label.Id</td>
                    <td>@label.Titulo</td>
                    <td>@label.Date</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@label.Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@label.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay etiquetas</p>
    }
</div>

