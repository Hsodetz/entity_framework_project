@model IEnumerable<entityFrameworkProyect.Models.Article>
@{
    ViewData["Title"] = "Lista de artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary form-control">Crear artículo</a>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a => a.Id)</th>
                <th>@Html.DisplayNameFor(a => a.Titulo)</th>
                <th>@Html.DisplayNameFor(a => a.Descripcion)</th>
                <th>@Html.DisplayNameFor(a => a.Date)</th>
                <th>@Html.DisplayNameFor(a => a.Qualification)</th>
                <th>@Html.DisplayNameFor(a => a.Category)</th>
                <th></th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Id</td>
                    <td>@articulo.Titulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Date</td>
                    <td>@articulo.Qualification</td>
                    <td>@articulo.Category.Name</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@articulo.Id">Editar</a>
                        <a class="btn btn-success text-white" asp-action="ManageTask" asp-route-id="@articulo.Id">Administrar Etiquetas</a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@articulo.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay artículos</p>
    }
</div>